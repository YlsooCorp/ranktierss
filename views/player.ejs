<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { pageTitle }) %>
  <body class="mc-body">
    <div class="mc-background"></div>
    <%- include('partials/navbar', { navActive: null }) %>

    <main class="mc-main">
      <section class="mc-section">
        <div class="mc-container">
          <% if (!player) { %>
            <div class="mc-empty mc-card">
              <h1>Player not found</h1>
              <p>We couldn't locate that Minecraft IGN. Double-check the spelling and try again.</p>
            </div>
          <% } else { %>
            <div class="mc-card">
              <h1 class="mc-heading"><%= player.username %></h1>
              <p class="mc-text-muted">Total Points: <strong><%= player.points %></strong></p>
              <% if (player.games && player.games.length > 0) { %>
                <p>Games: <%= player.games.join(', ') %></p>
              <% } %>
            </div>
          <% } %>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
