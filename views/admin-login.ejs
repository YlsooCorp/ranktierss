<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { pageTitle }) %>
  <body class="mc-body">
    <div class="mc-background"></div>
    <main class="mc-main">
      <section class="mc-section">
        <div class="mc-container mc-auth">
          <div class="mc-auth__panel mc-card">
            <h1 class="mc-heading">Admin Login</h1>
            <p class="mc-text-muted">Secure access to manage Minecraft events and leaderboards.</p>

            <% if (error) { %>
              <div class="mc-notice mc-notice--error"><%= error %></div>
            <% } %>

            <form class="mc-form" action="/admin/login" method="post">
              <label for="username">Username</label>
              <input id="username" class="mc-input" type="text" name="username" required />

              <label for="password">Password</label>
              <input id="password" class="mc-input" type="password" name="password" required />

              <button class="mc-button mc-button--accent" type="submit">Login</button>
            </form>
          </div>
        </div>
      </section>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
